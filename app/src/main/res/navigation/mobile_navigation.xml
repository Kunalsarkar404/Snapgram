<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    android:theme="@style/Theme.Snapgram"
    app:startDestination="@id/home">
    <fragment
        android:id="@+id/home"
        android:name="com.example.snapgram.fragments.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/search"
        android:name="com.example.snapgram.fragments.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" />
    <dialog
        android:id="@+id/viewLayout"
        android:name="com.example.snapgram.fragments.PostFragment"
        android:label="fragment_post"
        tools:layout="@layout/fragment_post" />

    <fragment
        android:id="@+id/reel"
        android:name="com.example.snapgram.fragments.ReelFragment"
        android:label="fragment_reel"
        tools:layout="@layout/fragment_reel" />
    <fragment
        android:id="@+id/profile"
        android:name="com.example.snapgram.fragments.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />
</navigation>